{
  "manifest_version":3,
  "version":"1.0",
  "name":"Auto Leaf",
  "description":"auto detect new series, track episodes, watch history",
  "permissions": [
    "downloads",
    "webNavigation",
    "browsingData",
    "declarativeNetRequest",
    "contextMenus",
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],  
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "menu.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}